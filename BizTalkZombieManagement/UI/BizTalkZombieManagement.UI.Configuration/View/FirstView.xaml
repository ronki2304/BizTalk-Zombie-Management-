<Window x:Class="BizTalkZombieManagement.UI.Configuration.View.FirstView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FirstWindow" Height="300" Width="300">
    <Grid>

        <TextBox  Text="{Binding Comment, Mode=TwoWay}" Margin="12,192,112,40" IsEnabled="{Binding IsEnable}"/>
        <Button Width="100" Height="30" Content="click" Command="{Binding ClickCommand}" Margin="178,192,0,39" />
        <RadioButton Content="RadioButton" Height="16" HorizontalAlignment="Left" Margin="58,54,0,0" Name="radioButton1" VerticalAlignment="Top" GroupName="Meuh" Command="{Binding ActiveIsEnable}" />
        <RadioButton Content="RadioButton" Height="16" HorizontalAlignment="Left" Margin="58,86,0,0" Name="radioButton2" VerticalAlignment="Top" GroupName="Meuh" Command="{Binding DisActiveIsEnable}"/>
    </Grid>
</Window>
